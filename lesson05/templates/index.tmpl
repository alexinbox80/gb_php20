<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="public/css/main.css">
    <title>{{ title }}</title>
</head>
<body>
    <header class="header">
        <div class="content">
            {{ include('menu.tmpl') }}
            <h1>{{ title }}</h1>
        </div>
    </header>
    <section class="section">
        <div class="content">
            <p>CONTENT</p>
            {% if loginPage %}
                {{ include(loginPage) }}
            {% elseif regPage %}
                {{ include(regPage) }}
            {% elseif cabinetPage %}
                {{ include(cabinetPage) }}
            {% else %}
                <p>CONTENT CONTENT</p>
                <div class="item">
                    {% for good in goods %}
                        <div class="item__good">
                            <div class="item__pics">
                                <img src="public/img/{{ good.photo }}" alt="">
                            </div>
                            <div class="item__content">
                                <div class="iten__title">
                                    {{ good.title }}
                                </div>
                                <div class="item__price">
                                    price: ${{ good.price }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>
    <footer class="footer">
        <div class="content">
            <p>Footer is HERE</p>
        </div>
    </footer>
</body>
</html>
